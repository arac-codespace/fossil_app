<!DOCTYPE html>
<html>
  <head>
    <title>Fossil_DB</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=yes">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload'  %>
    <link href="https://fonts.googleapis.com/css?family=Inknut+Antiqua|Roboto" rel="stylesheet">  
    <%= csrf_meta_tags %>    
  </head>

  <body>


<div id="wrapper" class="active">  
  <!-- Sidebar -->
          <!-- Sidebar -->
  <div id="sidebar-wrapper">
    <ul id="sidebar_menu" class="sidebar-nav">
       <li class="sidebar-brand"><a id="menu-toggle" href="#">Menu<span id="main_icon" class="glyphicon glyphicon-align-justify"></span></a></li>
    </ul>
    
    <ul class="sidebar-nav " id="sidebar">

      <li>
        <%= link_to root_path do %>
          Home
          <!--<span class="sub_icon glyphicon glyphicon-link"></span>-->
        <% end %> 
      </li>
      
      <li>
        <%= link_to general_information_path do %>
          General Information
          <!--<span class="sub_icon glyphicon glyphicon-link"></span>-->
        <% end %> 
      </li>
      
      <li>
        <%= link_to phylum_information_path do %>
          Phylum Information
          <!--<span class="sub_icon glyphicon glyphicon-link"></span>-->
        <% end %> 
      </li>        
      
      <li>
        <%= link_to directory_index_path do %>
          Directory
          <!--<span class="sub_icon glyphicon glyphicon-link"></span>-->
        <% end %> 
      </li> 
      
      <li>
        <%= link_to species_index_path do %>
          All Species
          <!--<span class="sub_icon glyphicon glyphicon-link"></span>-->
        <% end %> 
      </li>       
      
      <li>
        <%= link_to about_path do %>
          About
          <!--<span class="sub_icon glyphicon glyphicon-link"></span>-->
        <% end %> 
      </li>       
       
    </ul>
  </div>
      
      
  <!-- Page content -->
  <div id="page-content-wrapper">
    <!-- Keep all page content within the page-content inset div! -->
    <div class="page-content inset">
       <%= notice %>
       <%= alert %>
      <div class= "container">
        <div class = "row">
          <div class='col-md-6'>
            <ol class="breadcrumb">
              <%= render_breadcrumbs :tag => :li, :separator => "" %>
            </ol>
          </div>
        </div>
      </div>  
      <%= yield %>
              
    </div>  
  </div>
  
</div>


  
  </body>

</html>
