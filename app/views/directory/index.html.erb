<div class="index-header">
  <div class= "container-fluid">
    <div class = "row">
      <div class = "col-md-12">
        
        <h2 class= 'index-title text-center'> Main Directory </h2>
          
          <div class="panel panel-default">
            <div class="panel-heading text-center"><h4 class='text-center'>Kingdom: Animalia</h4></div>
            <div class="panel-body">
                <% @phylums.each do |x| %>
                <!-- If the phylum records have the dynamic id of Animalia...-->
                  <% if x.kingdom_id == @animalia.id %>
                    <!--Link to a show page where all the species share the same phylum_id -->
                    <%= link_to directory_path(x.id) do %>
                      <h5><%= x.phylum_name %></h5>
                    <% end %>  
                    <ul  style="list-style: none;">
                      <% @classes.each do |z| %>
                      <!-- Here, we do the same as above except we attach a dynamic query string-->
                      <!-- to filter the classes in the show view file... -->
                        <%= link_to directory_path(x.id, class_var: "#{z.class_name}") do %>
                          <% if z.phylum_id == x.id %>
                            <li> <h5><span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
                             <%= z.class_name %> </h5> </li>
                          <% end %>
                        <% end %>  
                      <% end %>
                    </ul>
                    
                  <% end %>
                <% end %> <!-- end for each loop -->
            </div> <!--panel body end-->
          </div> <!-- panel scaffold end-->
          
          <div>
          
          
          
